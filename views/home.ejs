<style>
  .header {
    text-align: center;
  }

  .heading {
    font-size: 50px;
    transition: 0.5s all ease-in-out;
  }

  .heading:hover {
    cursor:default;
    background-color: #37495F;
    border-radius: 20px;
    box-shadow: 5px 5px 5px rgb(53, 67, 72);
  }

  .para {
    font-size: 20px;
    margin-top: 5px;
    transition: 0.5s all ease-in-out;
  }
  .para:hover{
    cursor: default;
    font-style: italic;
    
  }


  .fileUploadContainer {
    width: 70%;
    height: 150px;
    background-color: #d3e1e2;
    border: 1px solid grey;
    border-radius: 5px;
    transition: 0.7s ease-in-out;
  }

  .fileUploadContainer:hover{
    cursor: default;
    background-color: #7eaaad;
    box-shadow: 10px 10px 10px rgb(36, 51, 55);
    border-radius: 10px;
  }

  form {
    text-align: center;
  }

  .fileInput {
    text-align: center;
    background-color: #fff;
    align-items: center;
    border-radius: 5px;
    font-size: 20px;
  }

  .Upload-btn {
    height: 40px;
    width: 150px;
    border-radius: 5px;
    background-color: rgb(46, 78, 240);
    color: white;
    border: none;
    margin: 50px;
    font-size: 20px;
    transition: 0.5s ease-in-out;
  }

  .Upload-btn:hover{
    cursor: pointer;
    background-color: rgb(0, 63, 87);
    border-radius: 10px;
    box-shadow: 5px 5px 5px rgb(36, 45, 50);
  }

  .FileContainer {
    width: 70%;
    height: auto;
    text-align: center;
  }

  .uploadedFileHeading {
    height: 40px;
    margin-top: 50px;
    background-color: #37495F;
    color: #fff;
  }

  table {
    border-collapse: collapse;
    width: 100%;
  }

  thead {
    background-color: #bfbbaf;
    font-size: 20px;
  }

  tbody {
    font-size: 20px;
  }

  th,
  td {
    text-align: left;
    padding: 10px;
  }

  td {
    border-bottom: 1px solid grey;
  }

  .fa-up-right-from-square {
    padding-left: 10px;
  }

  .fa-trash-can {
    color: red;
    padding-left: 10px;
  }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="header">
  <h1 class="heading">Upload a File Here</h1>
  <p class="para">Reads and presents the contents of a CSV file in a structured tabular format.</p>
</div>
<center>
  <div class="fileUploadContainer text-center">
    <form action="/upload" method="POST" enctype="multipart/form-data">
      <input class="fileInput" type="file" name="file" accept=".csv">
      <button class="Upload-btn" type="submit">Upload</button>
    </form>
  </div>


  <div class="FileContainer">
    <div class="uploadedFileHeading">
      <h1>Uploaded File</h1>
    </div>

    <% if ( Files.length === 0  ) {%>
    <h2>Please Upload a File!</h2>
    <% } else { %>
    <table>
      <thead>
        <tr class="tableHead">
          <th>Name</th>
          <th>Date</th>
          <th>Time</th>
          <th>View</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>

        <% let sl = 0 %>

        <% for (let file of Files) {%>
        <tr>

          <td> <%= ++sl %>. <%= file.FileName %> </td>
          <td> <%= file.createdAt.toLocaleDateString() %></td>
          <td> <%= file.createdAt.toLocaleTimeString() %> </td>
          <td> <a href="/view/<%= file._id %>"> <i class="fa-solid fa-up-right-from-square"></i> </a></td>
          <td> <a href="/delete/<%= file._id %>"> <i class="fa-solid fa-trash-can"></i> </a></td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <% } %>
  </div>
</center>

  </main>